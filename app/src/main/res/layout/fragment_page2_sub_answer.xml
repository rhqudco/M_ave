<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp"
    tools:context=".Diary.Page2_sub_answer">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="355dp"
            android:background="#00ff0000"
            android:scaleType="fitCenter"
            android:src="@drawable/calendar"
            android:contentDescription="@string/todo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:background="@drawable/backgroundwall"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="108dp"
                android:layout_height="95dp"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:src="@drawable/flowerdaisy"
                android:contentDescription="@string/questionflower" />

            <TextView
                android:id="@+id/todayQuestion"
                android:layout_width="286dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/ant"
                android:textColor="@color/black"
                android:gravity="start"
                android:text="@string/todayquestion"
                android:textSize="25sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/activity_main">

            <EditText
                android:id="@+id/edt_answer"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:gravity="center"
                android:autofillHints=""
                android:textSize="25sp"
                android:ems="10"
                android:fontFamily="@font/app_main_font"
                android:hint="@string/answerQuestion"
                android:inputType="textPersonName" />

            <Button
                android:id="@+id/btn_answer"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:backgroundTint="#C4425B"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:elevation="30dp"
                android:fontFamily="@font/app_main_font"
                android:background="@drawable/button_background"
                android:text="@string/pleaseAnswer" />
        </LinearLayout>

        <ListView
            android:id="@+id/listMemo"
            android:paddingTop="30dp"
            android:divider="@null"
            android:dividerHeight="0dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/flower_wallpaper" />

    </LinearLayout>
</FrameLayout>